{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"declaration": true,
		"skipLibCheck": true,
		"outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"/src/@types"
	]
}
