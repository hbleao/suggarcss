{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"declaration": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@porto-ocean/*": ["src/components/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "./src/@types/scss.d.ts"]
}
