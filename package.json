{
	"name": "@porto/js-library-corp-hubv-porto-ocean",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"type": "module",
	"bin": {
		"porto-ocean": "./dist/cli/cli.js"
	},
	"files": [
		"dist",
		"src/index.ts",
		"src/cli",
		"src/components/**/*",
		"README.md"
	],
	"author": {
		"name": "Henrique Le√£o",
		"email": "henrique.leao@portoseguro.com.br"
	},
	"scripts": {
		"build": "tsup src/index.ts src/cli/cli.ts --format esm,cjs --dts --out-dir dist --minify --clean && npm run build:components && npm run copy-files",
		"build:cli": "tsup src/cli/cli.ts --format esm,cjs --out-dir dist/cli --minify --clean && chmod +x dist/cli/cli.js && npm run copy-files",
		"build:components": "node scripts/build-components.js",
		"test": "jest --passWithNoTests",
		"test:cli": "node dist/cli.js",
		"copy-files": "node scripts/copy-files.js",
		"update-changelog": "node scripts/update-changelog.js",
		"clean": "npm run clean:coverage && npm run clean:dist",
		"clean:coverage": "rimraf coverage",
		"clean:dist": "rimraf dist",
		"prepack": "clean-package",
		"postpack": "clean-package restore"
	},
	"license": "MIT",
	"dependencies": {
		"@inquirer/prompts": "^7.4.1",
		"commander": "^13.1.0",
		"fs-extra": "^11.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "^29.5.12",
		"@types/react": "^19.1.0",
		"aes-js": "^3.1.2",
		"clean-package": "^2.2.0",
		"crypto-js": "^4.2.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"react": "^19.1.0",
		"rimraf": "^5.0.5",
		"sanitize-html": "^2.17.0",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsup": "^8.0.2",
		"typescript": "^5.4.5"
	}
}